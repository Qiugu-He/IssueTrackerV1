@model IEnumerable<IssueTrackerV1.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
@if (!Model.Any())
{
    <p>Dont have user assgined yet!</p>
}
else
{
    <table id ="users" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>User</th>
            <th>Membership Type</th>
            <th>Delete</th>

        </tr>
        </thead>
        
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>@Html.ActionLink(user.Name, "Edit", "User", new { id = user.Id }, null)
                <td>@user.MembershipType.Name</td>
                <td>
                    <button data-user-id ="@user.Id" class ="btn-link js-delete">Delete</button>
                </td>

            </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#users").on("click",".js-delete" ,function() {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function(result) {
                    if (result) {
                        $.ajax({
                            url: "/api/user/" + $(this).attr("data-user-id"),
                            method: "DELETE",
                            success: function() {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

