@model IEnumerable<IssueTrackerV1.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
@if (!Model.Any())
{
    <p>Dont have user assgined yet!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>User</th>
            <th>Membership Type</th>

        </tr>
        </thead>
        
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>@Html.ActionLink(user.Name, "Edit", "User", new { id = user.Id }, null)
                <td>@user.MembershipType.Name</td>

            </tr>
            }
        </tbody>
    </table>
}

