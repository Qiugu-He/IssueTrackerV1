@model IssueTrackerV1.ViewModels.IssueFormViewModel

@{
    ViewBag.Title = Model.Title;

}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Issue"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Issue.Name)
        @Html.TextBoxFor(m => m.Issue.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Issue.ReleaseDate)
        @Html.TextBoxFor(m => m.Issue.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Issue.GenreId)
        @Html.DropDownListFor(m => m.Issue.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Issue.NumberInStack)
        @Html.TextBoxFor(m => m.Issue.NumberInStack, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Issue.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

